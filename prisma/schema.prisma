generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  private_id String    @unique @default(uuid())
  public     Int       @unique @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  products   Product[]
  reviews    Review[]
}

model Product {
  id             String   @unique @default(uuid())
  userPrivate_id String
  image_link     String
  category       String
  review         Review[]
  user           User     @relation(fields: [userPrivate_id], references: [private_id])
}

model Review {
  id             String  @unique @default(uuid())
  stars          Int
  comment        String
  productId      String
  userPrivate_id String
  product_id     Product @relation(fields: [productId], references: [id])
  user_id        User    @relation(fields: [userPrivate_id], references: [private_id])
}
