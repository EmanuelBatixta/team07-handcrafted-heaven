generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  private_id Int       @id @unique @default(autoincrement())
  public_id  String    @unique @default(uuid())
  name       String
  email      String    @unique
  password   String
  products   Product[]
  reviews    Review[]
}

model Product {
  id            Int      @id @unique @default(autoincrement())
  userPublic_id String
  image_link    String?
  category      String
  review        Review[]
  price         Float
  user          User     @relation(fields: [userPublic_id], references: [public_id])
  description   String
  ratings       Rating[]
}

model Review {
  id            Int     @id @unique @default(autoincrement())
  stars         Int
  comment       String
  productId     Int
  userPublic_id String
  product_id    Product @relation(fields: [productId], references: [id])
  user_id       User    @relation(fields: [userPublic_id], references: [public_id])
}

model Rating {
  id         Int     @id @unique @default(autoincrement())
  stars      Int
  id_product Product @relation(fields: [productId], references: [id])
  productId  Int
}
